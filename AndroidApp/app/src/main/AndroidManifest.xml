<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rosen.homecontrolapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:usesCleartextTraffic="true"
        android:fullBackupContent="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomeControlApp">
        <activity android:name="com.rosen.homecontrolapp.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.rosen.homecontrolapp.activity.DeviceActivity"
            android:label="Device"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rosen.homecontrolapp.activity.ConfigurationActivity"
            android:label="Configuration"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.rosen.homecontrolapp.activity.CommandLogActivity"
            android:label="Command Logs"
            android:screenOrientation="portrait" />

    </application>

</manifest>